{
  "compilerOptions": {
    "skipLibCheck": true,
    "declaration": true,
    "isolatedModules": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "sourceMap": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "types": ["vite/client"],
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"],
      "/@/*": ["./src/*"],
      "#/*": ["src/types/*"],
      "/#/*": ["src/types/*"],
      "~/*": ["./*"],
      "/~/*": ["./*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "src/types/**/*.ts",
    "src/types/**/*.d.ts",
    "build/**/*.ts",
    "build/**/*.d.ts",
    "vite.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
